{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "standard",
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "rules": {
    "comma-dangle": ["warn", "always-multiline"],
    "eqeqeq": "error",
    "no-bitwise": "warn",
    "no-extra-parens": ["warn", "all", {
      "conditionalAssign": true
    }],
    "no-var": "error",
    "prefer-const": "warn",
    "valid-jsdoc": ["warn", {
      "requireReturnDescription": false
    }]
  }
}
